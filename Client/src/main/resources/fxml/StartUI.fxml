<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="startMain" fx:controller="StartUIController" fx:id="StartUI"
      alignment="CENTER">


    <Label text="Enter IP and port to connect to the server" styleClass="biggerFont"/>

    <TextField fx:id="text_port" text="127.0.0.1:5555" styleClass="biggerFont" alignment="CENTER"/>

    <Button text="Connect" onAction="#connectToServer" styleClass="biggerFont">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </Button>

    <Label fx:id="label_error" visible="false"/>

</VBox>

